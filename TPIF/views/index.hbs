                <h2 class="modal-title" id="exampleModalLabel">{{titulo}}</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h4>{{subtitulo}}</h4>
                <p class="text-danger">{{cuerpo}}</p>
            </div>
        </div>
    </div>
</div>
{{/each}}
